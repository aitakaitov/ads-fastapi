    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api.main:app",
                "--port",
                "8002",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "extract entities",
            "type": "python",
            "request": "launch",
            "program": "advertisement_processing/regular_extractor/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            // "args": ["--datadir", "RegularExtractor/data", "--lemmatize"]
            "args": [
                "--datadir",
                "advertisement_processing/regular_extractor/data"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}${pathSeparator}tacr-fastapi${pathSeparator}${env:PYTHONPATH}"
            },
        },
        {
            "name": "lematize examples",
            "type": "python",
            "request": "launch",
            "program": "advertisement_processing/regular_extractor/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--datadir",
                "advertisement_processing/regular_extractor/data",
                "--lemmatize"
            ]
            // "args": ["--datadir", "RegularExtractor/data"]
        }
    ]
}